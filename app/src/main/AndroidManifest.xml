<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sustech.unknown.channelx">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".ChannelsActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChatActivity"
            android:parentActivityName=".ChannelsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChannelsActivity" />

        </activity>
        <activity
            android:name=".CreateChannelActivity1"
            android:parentActivityName=".ChannelsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChannelsActivity" />
        </activity>
        <activity
            android:name=".CreateChannelActivity2"
            android:parentActivityName=".CreateChannelActivity1">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CreateChannelActivity1" />
        </activity>
        <activity
            android:name=".JoinChannelActivity"
            android:parentActivityName=".ChannelsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChannelsActivity" />
        </activity>
        <activity
            android:name=".ChannelSettingsActivity"
            android:parentActivityName=".ChatActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChatActivity" />
        </activity>
        <activity android:name="io.github.xudaojie.qrcodelib.CaptureActivity" />
    </application>

</manifest>